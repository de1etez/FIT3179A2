{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": "container",
    "height": "container",
    "title": {
      "text": "Location",
      "fontSize": 20
    },
  
    "layer": [
      {
        "data": {
          "url": "https://raw.githubusercontent.com/de1etez/FIT3179A2/main/data/ne_50m_admin_0_sovereignty.json",
          "format": {
            "type": "topojson",
            "feature": "ne_50m_admin_0_sovereignty"
          }
        },
  
        "projection": {
          "type": "equalEarth"
        },
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "gray",
          "tooltip": true
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/de1etez/FIT3179A2/main/data/ne_50m_admin_0_sovereignty.json",
          "format": {
            "type": "topojson",
            "feature": "ne_50m_admin_0_sovereignty"
          }
        },
  
        "transform": [
          {
            "lookup": "properties.ISO_A3_EH",
            "from": {
              "data": {
                "url": "https://raw.githubusercontent.com/de1etez/FIT3179A2/main/data/athletes_location.csv"
              },
              "key": "country_code",
              "fields": ["Total"]
            }
          }
        ],
  
        "projection": {
          "type": "equalEarth"
        },
        "mark": {
          "type": "geoshape",
          "fill": "lightgray",
          "stroke": "gray",
          "tooltip": true
        },
  
        "encoding": {
          "fill": {
            "field": "Total",
            "type": "quantitative"
          }
        }
      }
    ]
  }
  